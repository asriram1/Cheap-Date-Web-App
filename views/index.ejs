<!-- views/index.ejs -->
<!doctype html>
<html>
    <p class = "aligncenter">
        <img src="logo.jpg" width = "500"/>
    </p>

    <head>
        <title>Cheap Date.</title>
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    </head>

    <body>
        <div class="container">
            <div class="jumbotron">
                <h1> Cheap Date.</h1>
                <p>Login or Register with:</p>
                <a href="/login" class="btn btn-default"><span class="fa fa-user"></span> Local Login</a>
                <a href="/signup" class="btn btn-default"><span class="fa fa-user"></span> Local Signup</a>
                <a href="/auth/google" class="btn btn-danger"><span class="fa fa-google-plus"></span> Google</a>
            </div>

            <div class="container">
                <h1> Search below!</h1>
                <form action="/results" method="POST">
                    <p>Enter your city:
                        <input type="text" name="loc"/>
                    </p>
                    <p>Enter the earliest day your date could be (YYYY-MM-DD):
                        <input type="text" name="start"/>
                    </p>
                    <p>Enter the latest day your date could be (YYYY-MM-DD):
                        <input type="text" name="end"/>
                    </p>
                    <p>On a scale of 1 to 4, how much do you want to spend on food?
                        <input type="text" name="number"/>
                    </p>
                    <p>What kind of food would you like to eat?
                        <input type="text" name="food"/>
                    </p>
                    <input type="submit"/>
                </form>
            </div>
        </div>
    </body>
</html>